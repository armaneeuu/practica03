@model SolicitudCompra
@{
    ViewData["Title"] = "Solicitud de Compra";
}
<h1>@ViewData["Title"]</h1>

<h1>Formulario de solicitud de compra</h1>

<div asp-validation-summary="All" class="alert-danger">

</div>

<form action="" method="post">
    <div class="form-group">
        <label asp-for="Producto"></label>
        <input asp-for="Producto" class="form-control">
    </div>
        <div class="form-group">
        <label asp-for="Precio"></label>
        <input asp-for="Precio" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Categoria"></label>
        <input asp-for="Categoria" class="form-control">
    </div>
    <input type="submit" value="Enviar" class="btn btn-primary">


</form>